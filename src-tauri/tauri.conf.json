{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "clovis",
  "version": "0.1.0",
  "identifier": "com.clovis.dev",
  "build": {
    "frontendDist": "../dist/client",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:all",
    "beforeBuildCommand": "bun build src/index.ts --target node --outdir ./dist && bun run build:client"
  },
  "app": {
    "windows": [
      {
        "title": "Clovis Flights",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/node*",
      "../dist/index.js"
    ]
  }
}
